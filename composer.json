{
	"name": "themeplate/meta",
	"description": "ThemePlate custom meta boxes",
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Gene Alyson Fortunado Torcende",
			"email": "genealyson.torcende@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"require": {
		"php": "^7.4|^8.0",
		"themeplate/column": "*",
		"themeplate/core": "*"
	},
	"require-dev": {
		"themeplate/tester": "^1.3"
	},
	"autoload": {
		"psr-4": {
			"ThemePlate\\Meta\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	}
}
